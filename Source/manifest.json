{
	"manifest_version": 1,

	"name": "Hands Across the Web",
    "short_name": "HAW",
	"description": "Replaces spaces with üëè, uppercases all text",
	"author": "Max Parrish via Eric Bailey",
	"version": "1.0",
	"icons": {
			"16": "icon16.png",
			"32": "icon32.png",
			"48": "icon48.png",
